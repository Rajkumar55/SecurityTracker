<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="#4169e1" />
            <gradient android:angle="-90" android:startColor="#4169e1" android:endColor="#4169e1"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="#6495ed" />
            <solid android:color="#6495ed"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="#6495ed" />
            <gradient android:angle="-90" android:startColor="#6495ed" android:endColor="#6495ed" />
        </shape>
    </item>
</selector>