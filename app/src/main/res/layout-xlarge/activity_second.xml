<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0c394d">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/stopPtrlBtn"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle"
            android:text="STOP\nPATROL"
            android:textColor="#fff"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <Button
            android:id="@+id/startPtrlBtn"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle"
            android:text="START\nPATROL"
            android:textColor="#fff"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/stopPtrlBtn"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <Button
            android:id="@+id/checkoutBtn2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/checkin_circle"
            android:text="CHECK\nOUT"
            android:textColor="#fff"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <Button
            android:id="@+id/checinBtn2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/checkin_circle"
            android:text="CHECK\nIN"
            android:textColor="#fff"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/checkoutBtn2"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <Button
            android:id="@+id/qrcodeBtn"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/qr_button_circle"
            android:enabled="false"
            android:text="Scan QR\nCode"
            android:textColor="#fff"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/sosBtn1"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <Button
            android:id="@+id/sosBtn1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/sos_circle"
            android:text="SOS"
            android:textColor="#fff"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/background_light"
            app:layout_constraintTop_toBottomOf="@+id/checinBtn2"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/background_light"
            app:layout_constraintTop_toBottomOf="@+id/startPtrlBtn"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/background_light"
            app:layout_constraintTop_toBottomOf="@+id/qrcodeBtn"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="507dp"
            android:scaleType="fitXY"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:srcCompat="@drawable/camera2"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="385dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="   CAPLOC TRACKER"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="24sp"
            android:textStyle="bold"
            app:fontFamily="@font/roboto_bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="3dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@android:color/background_light"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            tools:layout_editor_absoluteX="0dp" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>